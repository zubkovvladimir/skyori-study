<div class="container h-100">
    <div class="htop">
        <div class="d-flex position-relative justify-content-center">
            <LinkTo @route="create-speaker" class="btn btn-outline-success my-2 d-flex position-absolute add-btn">Добавить</LinkTo>
            <h2 class="text-center">Спикеры</h2>
        </div>
        <div class="form-row navbar-panel justify-content-end">
            <div class="col-4 text-right">
                {{!-- <input class="form-control" type="search" placeholder="ФИО" aria-label="Спикер"> --}}
                {{input type="search" class="form-control" placeholder="Поиск" aria-label="Спикер" value=search}}
            </div>
            <div class="col-mb-auto text-right">
                {{!-- <button class="btn btn-outline-primary" type="submit">Найти</button> --}}
            </div>
        </div>
        {{#if this.isLoading}}
        <div class="loading">
            <img class="loading-img" src="spiner-cat.gif" alt="loading gif">
        </div>
        {{else}}
          {{#if this.isError}}
            <div class="error">
                <img class="error-img" src="error.gif" alt="Error">
                {{#if this.error}}
                  <h2 class="error-text">Error: {{this.error}}</h2>
                {{/if}}
            </div>
          {{else}}
            <div class="row row-cols-1 row-cols-md-3">
                {{#each this.model as |speaker|}}
                  <SpeakerItem
                    @photo={{speaker.photo}}
                    @firstName={{speaker.firstName}}
                    @lastName={{speaker.lastName}}
                    @patronymic={{speaker.patronymic}}
                    @id={{speaker.id}}
                    @onClick={{this.deleteSpeaker}}
                  />
                {{/each}}
            </div>
          {{/if}}
        {{/if}}
    </div>
</div>

{{outlet}}